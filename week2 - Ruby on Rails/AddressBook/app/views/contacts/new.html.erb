<% if @contact.errors.any? %>
 <ul>
   <% @contact.errors.full_messages.each do |error_msg| %>
     <li><%= error_msg %></li>
   <% end %>
 </ul>
<% end %>

<%= form_for @contact do |f| %>
      
      
    <div class="p">    
      <h2 class="p5 top-5">Information</h2>

          <p>
              <%= f.label :name %><br>
              <%= f.text_field :name %>
          </p>    
          <p>
              <%= f.label :address %><br>
              <%= f.text_area :address %>
          </p>


      <div class="button top-3"><%= f.submit 'Save' %></div>

   </div>
 <% end %>

  <p class="styleblack">
      <%= link_to 'Back to Contacts', contacts_path%>
  </p>