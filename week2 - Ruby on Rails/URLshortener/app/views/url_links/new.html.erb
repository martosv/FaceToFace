<% if flash[:errors] %>
  <% flash[:errors].each do |error_msg| %>
    <li><%= error_msg %></li>
  <% end %>
<% end %>

<%= form_for @url_link do |f| %>
  <p>
    <%= f.label :url %><br>
    <%= f.text_field :url %>
  </p>

  <p>
    <%= f.label :visits %><br>
    <%= f.text_area :visits %>
  </p>

  <p>
    <%= f.submit %>
  </p>

  <% end %>

  <p>
    <%= link_to 'Back', url_links_path %>
  </p>