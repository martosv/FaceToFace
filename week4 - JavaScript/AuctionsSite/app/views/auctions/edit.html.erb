<% if flash[:errors] %>
  <% flash[:errors].each do |error_msg| %>
    <li><%= error_msg %></li>
  <% end %>
<% end %>

<%= form_for @book do |f| %>
      
      
    <div>    
      <h2>Information</h2>

          <p>
              <%= f.label :item %><br>
              <%= f.text_field :item %>
          </p>    
          <p>
              <%= f.label :description %><br>
              <%= f.text_area :description %>
          </p>
          <p>
              <%= f.label :price %><br>
              <%= f.text_area :price %>
          </p>

          <p>
              <%= f.label :end_date %><br>
              <%= f.date_select :end_date %>
          </p>

      <div><%= f.submit 'Save' %></div>

   </div>
 <% end %>

  <p>
      <%= link_to 'Back to Books', books_path%>
